<odoo>
    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='fiscal_localization_setting_container']" position="after">
                <block title="Contract">
                    <setting string="Contract">
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="create_new_line_at_contract_line_renew" class="col-lg-3"/>
                                <field name="create_new_line_at_contract_line_renew"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
