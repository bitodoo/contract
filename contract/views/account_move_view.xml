<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--FORM view-->
    <record id="account_move_form_view_inherit" model="ir.ui.view">
        <field name="name">account_move form views inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="amount_residual" position="before">
                <field name="comission" colspan="2" />
                <field name="utility" colspan="2"/>
            </field>
            <field name="partner_id" position="after">
                <field name="server_id" invisible="True" />
                <field name="server_active" invisible="True" />
                <field name="website"/>
                <field name="mobile"/>
                <field name="contract_id"/>
                <field name="message_sent_to_whatsapp"/>
                <field name="is_nubefact"/>
                <field name="nubefact_start_date" widget="daterange" options='{"end_date_field": "nubefact_end_date", "always_range": "1"}' invisible="is_nubefact == False or state == 'draft'"/>
                <label for="total_comprobantes" invisible="is_nubefact == False or state == 'draft'"/>
                <div class="o_row" invisible="is_nubefact == False or state == 'draft'">
                    <field name="total_comprobantes" readonly="1"/>
                    <button type="object" name="get_total_documents" invisible="is_nubefact == False or state == 'draft'" class="btn-sm btn-link mb4 fa fa-search" title="Consultar comprobantes"/>
                </div>
            </field>
            <button name="action_post" position="before">
                <button type="object" string="On" name="action_server_active" invisible="(not contract_id or not server_id) or server_active" title="Active users DB"/>
                <button type="object" string="Off" name="action_server_active" invisible="(not contract_id or not server_id) or not server_active" title="Deactive users DB"/>
            </button>
        </field>
    </record>
    <!--TREE view-->
    <record id="account_move_tree_view_inherit" model="ir.ui.view">
        <field name="name">account_move tree views inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree[1]/field[@name='amount_total_signed']" position="after">
                <field name="comission" optional="show" />
                <field name="utility" optional="show"/>
            </xpath>
             <xpath expr="//tree[1]/field[@name='invoice_user_id']" position="attributes">
               <attribute name="optional">show</attribute>
            </xpath>
            <xpath expr="//tree[1]/field[@name='invoice_date']" position="before">
                <field name="mobile" optional="show"/>
            </xpath>
            <xpath expr="//tree[1]/field[@name='name']" position="after">
                <field name="website" optional="show" widget="url"/>
                <field name="server_id" column_invisible="True" />
                <field name="server_active" column_invisible="True" />
                <button name="action_server_active" class="text-success" type="object" string="On" icon="fa-toggle-on" invisible="(not contract_id or not server_id) or server_active" title="Active users DB"/>
                <button name="action_server_active" class="text-warning" type="object" string="Off" icon="fa-toggle-off" invisible="(not contract_id or not server_id) or not server_active" title="Deactive users DB"/>
                <field name="contract_id" optional="show" />
                <field name="message_sent_to_whatsapp" string="WA" optional="hide" />
                <field name="is_nubefact" optional="hide" />
            </xpath>
            <xpath expr="//tree[1]/field[@name='invoice_date_due']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//tree[1]/field[@name='activity_ids']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>
</odoo>
