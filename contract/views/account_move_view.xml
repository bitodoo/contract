<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--FORM view-->
    <record id="account_move_form_view_inherit" model="ir.ui.view">
        <field name="name">account_move form views inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="tax_totals_json" position="after">
                <field name="comission" colspan="2" />
                <field name="utility" colspan="2"/>
            </field>
            <field name="partner_id" position="after">
                <field name="website"/>
                <field name="mobile"/>
                <field name="contract_id"/>
            </field>
        </field>
    </record>
    <!--TREE view-->
    <record id="account_move_tree_view_inherit" model="ir.ui.view">
        <field name="name">account_move tree views inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree[1]/field[@name='amount_total_signed']" position="after">
                <field name="comission" optional="show" />
                <field name="utility" optional="show"/>
            </xpath>
             <xpath expr="//tree[1]/field[@name='invoice_user_id']" position="attributes">
               <attribute name="optional">show</attribute>
            </xpath>
            <xpath expr="//tree[1]/field[@name='invoice_date']" position="before">
                <field name="mobile" optional="show"/>
            </xpath>
            <xpath expr="//tree[1]/field[@name='state']" position="after">
                <field name="website" optional="show" />
            </xpath>
            <xpath expr="//tree[1]/field[@name='name']" position="after">
                <field name="contract_id" optional="show" />
            </xpath>
            <xpath expr="//tree[1]/field[@name='invoice_date_due']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//tree[1]/field[@name='activity_ids']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>
</odoo>
